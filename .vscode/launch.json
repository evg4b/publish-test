    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch http",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "args": [
                "--port=3000"
            ]
        },
        {
            "name": "Launch http/https",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "args": [
                "--port=8080",
                "--https-port=8443",
                "--cert-file=./server.crt",
                "--key-file=./server.key"
            ]
        }
    ]
}